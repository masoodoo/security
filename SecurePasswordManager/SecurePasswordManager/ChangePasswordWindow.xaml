<Window x:Class="SecurePasswordManager.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تغییر رمز عبور" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="رمز عبور فعلی:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtCurrentPassword" Margin="0,0,0,15"/>

        <TextBlock Text="رمز عبور جدید:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,15"/>

        <TextBlock Text="تکرار رمز عبور جدید:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,20"/>

        <Button Content="تغییر رمز" Click="ChangePassword_Click" 
                HorizontalAlignment="Center" Padding="20,5"/>
    </StackPanel>
</Window>