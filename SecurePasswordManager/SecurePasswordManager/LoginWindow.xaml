<Window x:Class="SecurePasswordManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="🔐 Password Vault" 
                     FontSize="20" Foreground="#FF8C00" 
                     Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <PasswordBox x:Name="txtMasterPassword" 
                       Margin="0,0,0,20"
                       PasswordChar="•"
                       Background="#1E1E1E" Foreground="White"
                       BorderBrush="#FF8C00"/>

            <Button Content="Unlock" 
                  Click="Login_Click"
                  Background="#FF8C00" Foreground="Black"
                  FontWeight="Bold" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>