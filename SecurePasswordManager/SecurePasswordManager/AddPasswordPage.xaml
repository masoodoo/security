<Page x:Class="SecurePasswordManager.AddPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Password" 
      Background="#121212" Foreground="White">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Service Name:" Margin="0,0,0,5" Foreground="#FF8C00"/>
        <TextBox x:Name="txtServiceName" Margin="0,0,0,20" 
               Background="#1E1E1E" Foreground="White" BorderBrush="#FF8C00"/>

        <TextBlock Text="Password:" Margin="0,0,0,5" Foreground="#FF8C00"/>
        <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" 
                   Background="#1E1E1E" Foreground="White" BorderBrush="#FF8C00"/>

        <Button Content="Save" Click="SavePassword_Click" 
              Background="#FF8C00" Foreground="Black"
              FontWeight="Bold" Padding="10,5"/>
    </StackPanel>
</Page>